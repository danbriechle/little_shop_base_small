<h2>Items Catalog</h2>

<%= tag.div id: "statistics" do %>
  <%= tag.div id: "popular-items" do %>
  <h4>Popular Items</h4>
    <ol>
    <% @popular_items.each do |item| %>
    <li><%= item.name %>, total ordered: <%= item.total_ordered %></li>
    <% end %>
    </ol>
  <% end %>
  <%= tag.div id: "unpopular-items" do %>
  <h4>Least Popular Items</h4>
    <ol>
    <% @unpopular_items.each do |item| %>
    <li><%= item.name %>, total ordered: <%= item.total_ordered %></li>
    <% end %>
    </ol>
  <% end %>
<% end %>

<% @items.each do |item| %>
  <%= tag.div id: "item-#{item.id}" do %>
  <%= render partial: "card", locals: {item: item, img_width: 200}%>
  <% end %>
<% end %>
